<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:color="@color/white"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_linear"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/luto_regular"
                    android:gravity="center"
                    android:text="Select Customer"
                    android:textColor="@color/black"
                    android:textSize="14sp" />



                <RelativeLayout
                    android:id="@+id/select_customer_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/scan_shape_frag"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/customer_typetv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/luto_regular"
                        android:hint="--Select Customer type--"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray" />


                    <Spinner
                        android:id="@+id/getCustomerType"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_arrow_drop_down_black" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearcustomerdetails"
                    android:background="@drawable/scan_shape_frag"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:src="@drawable/snowcembanner1024"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Firm Name"
                            android:visibility="gone"
                            android:fontFamily="@font/luto_regular"
                            android:textColor="@color/grey_scan"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/firmNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/luto_regular"
                            android:text=""
                            android:textSize="16sp"
                            android:textAlignment="center"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Customer Name"
                            android:visibility="gone"
                            android:fontFamily="@font/luto_regular"
                            android:textColor="@color/grey_scan"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/customerNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:fontFamily="@font/luto_regular"
                            android:text=""
                            android:textAlignment="center"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:text="Customer Mobile Number"
                            android:fontFamily="@font/luto_regular"
                            android:textColor="@color/grey_scan"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/customerMobileTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:fontFamily="@font/luto_regular"
                            android:text=""
                            android:textAlignment="center"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Address"
                            android:fontFamily="@font/luto_regular"
                            android:textColor="@color/grey_scan"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/addressTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/luto_regular"
                            android:text=""
                            android:textAlignment="center"/>


                    </LinearLayout>









                </LinearLayout>















            </LinearLayout>






        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/luto_regular"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:paddingRight="25dp"
                android:paddingBottom="5dp"
                android:text="Proceed"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/selectCustomerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:fontFamily="@font/luto_regular"
            android:text="Please Select Customer"
            android:textSize="15sp"
            android:textAlignment="center"/>



        <RelativeLayout
            android:id="@+id/relativeError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/relativeCircle"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/active_dot_yellow">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_internet_connection" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tvNoInternet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeCircle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:text="No Internet"
                    android:textColor="#000"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNoInternet"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Connection is poor"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnTryAgain"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/active_button"
                    android:text="Try again"
                    android:textColor="@android:color/white" />


            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>




</layout>

